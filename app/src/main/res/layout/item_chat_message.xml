<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- User Image -->
    <ImageView
        android:id="@+id/userImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_user"
        android:scaleType="centerCrop"
        android:contentDescription="User Image"
        android:background="@drawable/rounded_background_black"
        android:layout_marginEnd="8dp" />

    <!-- Vertical Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- User Name -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo2_bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:contentDescription="User Name" />

        <!-- Post Content -->
        <TextView
            android:id="@+id/contentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Post Content"
            android:textSize="14sp" />

        <!-- Likes, Comments, and Timestamp -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <!-- Heart (Like) Button -->
            <ImageView
                android:id="@+id/likeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_heart_outline"
                android:contentDescription="Like Button"
                android:padding="4dp"
                android:layout_alignParentStart="true" />

            <!-- Like Count -->
            <TextView
                android:id="@+id/likeCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Likes"
                android:layout_toEndOf="@id/likeButton"
                android:layout_marginStart="8dp"
                android:contentDescription="Like Count" />

            <!-- Comment Button -->
            <ImageView
                android:id="@+id/commentButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_comment"
                android:contentDescription="Comment Button"
                android:layout_toEndOf="@id/likeCountTextView"
                android:layout_marginStart="16dp"
                android:padding="4dp" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/timestampTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="06:06 PM"
                android:contentDescription="Timestamp"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
