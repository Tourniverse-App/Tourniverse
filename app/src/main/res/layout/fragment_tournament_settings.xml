<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <Button
        android:id="@+id/button_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1 Members"
        android:background="@android:color/transparent"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />


    <!-- Push Notifications -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Push Notifications"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchPushNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Game Notifications -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Notifications"
        android:textSize="18sp"
        android:fontFamily="@font/exo2_bold"
        android:paddingTop="8dp" />

    <!-- Scores Notifications -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Scores Update"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchScoresNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Social Notifications -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Social Notifications"
        android:textSize="18sp"
        android:fontFamily="@font/exo2_bold"
        android:paddingTop="16dp" />

    <!-- Chat Notifications -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chat Messages"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchChatNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Comments Notifications -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comments"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchCommentsNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Likes Notifications -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Likes"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchLikesNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <!-- Invite Button -->
    <Button
        android:id="@+id/button_invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:visibility="gone"/>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Buttons (Stacked) -->
    <Button
        android:id="@+id/button_delete_tournament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Tournament"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_leave_tournament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave Tournament"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</LinearLayout>