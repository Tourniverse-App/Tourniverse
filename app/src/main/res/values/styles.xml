<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AppCompat.TextView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="BlackButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Global App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:fontFamily">@font/exo2_regular</item>
        <item name="android:colorPrimary">@color/primary</item>
<!--        <item name="android:colorPrimaryDark">@color/primary_dark</item>-->
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="GoogleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@color/white</item>
        <item name="android:strokeWidth">2</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableStart">@drawable/google_icon</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
</resources>
