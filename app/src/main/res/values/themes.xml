<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme for the app -->
    <style name="Theme.Tourniverse" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and surface colors -->
        <!-- <item name="colorBackground">@color/white</item> -->
        <item name="colorSurface">@color/light_gray</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Button styling -->
        <item name="colorButtonNormal">@color/black</item>
        <item name="android:buttonStyle">@style/BlackButton</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Set default font -->
        <item name="android:fontFamily">@font/exo2_regular</item>

        <!-- Apply font globally to buttons -->
        <item name="buttonStyle">@style/CustomButtonStyle</item>

        <!-- Apply font globally to text input fields -->
        <item name="editTextStyle">@style/CustomEditTextStyle</item>

        <!-- Apply font globally to toolbars -->
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
    </style>

    <!-- Custom style for "Join Tournament" button -->
    <style name="JoinTournamentButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/custom_button</item> <!-- Use the selector -->
        <item name="android:textColor">@android:color/white</item> <!-- White text -->
        <item name="android:elevation">8dp</item> <!-- Default shadow -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
