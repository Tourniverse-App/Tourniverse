<?xml version="1.0" encoding="utf-8"?>
<!-- gray_box.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#D3D3D3" /> <!-- Light gray background -->
    <corners android:radius="8dp" /> <!-- Rounded corners -->
    <stroke
        android:width="1dp"
        android:color="#B0B0B0" /> <!-- Subtle border for better appearance -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" /> <!-- Adds some padding inside -->
</shape>
