<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/light_gray" /> <!-- Highlighted tab color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Default tab color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>
